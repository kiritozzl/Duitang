<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/table_view_rectangle"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
        <app.coolwhether.com.duitang_16_7_15.adapter.DynamicHeightImageView
            android:id="@+id/rcv_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/rcv_item_descr"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/rcv_item_collbtn"
        android:drawableLeft="@drawable/ic_star"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/light_grey"
        android:textSize="10sp"
        android:layout_width="36dp"
        android:layout_height="18dp"/>

    <View
        style="@style/HorizonTalDivider"/>

    <RelativeLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rcv_item_thumb"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/rcv_item_username"
            android:layout_toRightOf="@id/rcv_item_thumb"
            android:textSize="13sp"
            android:textColor="@color/blue"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/rcv_item_collectv"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_toRightOf="@id/rcv_item_thumb"
            android:layout_below="@id/rcv_item_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</LinearLayout>
